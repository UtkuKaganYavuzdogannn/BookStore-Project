@model BookStore.Models.EditProfileCusViewModel

@{
    ViewData["Title"] = "Profilimi Güncelle";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/sellerProfil/profil.css?v=@DateTime.Now.Ticks" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <title>@ViewData["Title"]</title>
</head>
   
<body>
    <div class="header">
        <a class="header-item" asp-controller="customers" asp-action="CstmrProfile">
            <span class="icon"><i class="fas fa-user"></i></span>
            Profilim
        </a>

        <a class="header-item" asp-controller="customers" asp-action="Shop">
            <span class="icon"><i class="fas fa-shopping-cart"></i></span>
            Mağaza
        </a>

        <a class="header-item" asp-controller="customers" asp-action="Wishlist">
            <span class="icon"><i class="fas fa-heart"></i></span>
            Siparişlerim
        </a>

        <a class="header-item exit" asp-controller="Account" asp-action="Logout">
            <span class="icon"><i class="fas fa-times-circle"></i></span>
            Çıkış Yap
        </a>
    </div>


             <!--Form gelicek ve post edilicek -->

    <div class="content">
        <div class="info-box">
            <div class="profile-icon">
                <i class="fas fa-user"></i> <!-- Font Awesome kullanıcı ikonu -->
            </div>

            <h2>Profilimi Güncelle</h2>
            <form asp-action="CusEditProfile" method="post">
                <div class="form-group">
                    <label asp-for="Name">Adı</label>

                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="phone_num">Telefon Numarası</label>
                    <input asp-for="phone_num" class="form-control" />
                    <span asp-validation-for="phone_num" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="cus_city">Şehir</label>
                    <input asp-for="cus_city" class="form-control" />
                    <span asp-validation-for="cus_city" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </form>
        </div>
    </div>
</body>
</html>
