@model IEnumerable<BookStore.Models.PastOrderViewModel>

@{
    ViewData["Title"] = "Sipariş Detayları";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/customerProfil/pastOrder.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="header">
        <div class="left-buttons">
            <a class="header-item" asp-controller="customers" asp-action="CstmrProfile">
                <span class="icon"><i class="fas fa-user"></i></span>
                Profilim
            </a>

            <a class="header-item" asp-controller="customers" asp-action="Shop">
                <span class="icon"><i class="fas fa-store"></i></span>
                Mağaza
            </a>

            <a class="header-item" asp-controller="customers" asp-action="PastOrder">
                <span class="icon"><i class="fas fa-heart"></i></span>
                Siparişlerim
            </a>
        </div>

        <a class="header-item exit" asp-controller="Account" asp-action="Logout">
            <span class="icon"><i class="fas fa-times-circle"></i></span>
            Çıkış Yap
        </a>
    </div>

    <div class="content">
        <div class="store-title">
            <h1>Siparişlerim</h1>
        </div>
        <table class="order-table">
            <thead>
                <tr>
                    <th>Sipariş ID</th>
                    <th>Kitap Adı</th>
                    <th>Satıcı</th>
                    <th>Alıcı</th>
                    <th>Sipariş Tarihi</th>
                    <th>Adet</th>
                    <th>Toplam Fiyat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.BookTitle</td>
                        <td>@order.SellerName</td>
                        <td>@order.CustomerName</td>
                        <td>@order.OrderTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@order.Quantity</td>
                        <td>@order.TotalPrice.ToString("F2") TL</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
