@model BookStore.Models.EditProfileViewModel

@{
    ViewData["Title"] = "Profilimi Güncelle";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/sellerProfil/profil.css?v=@DateTime.Now.Ticks" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="header">
        <a class="header-item" asp-controller="Seller" asp-action="Profile">
            <span class="icon"><i class="fas fa-user"></i></span>
            Profilim
        </a>
        <a class="header-item" asp-controller="Seller" asp-action="Store">
            <span class="icon"><i class="fas fa-store"></i></span>
            Mağazam
        </a>
        <a class="header-item" asp-controller="Seller" asp-action="Products">
            <span class="icon"><i class="fas fa-box"></i></span>
            Ürün
        </a>
        <a class="header-item" asp-controller="Seller" asp-action="Sales">
            <span class="icon"><i class="fas fa-chart-line"></i></span>
            Satışlarım
        </a>

        <a class="header-item exit" asp-controller="Account" asp-action="Logout">
            <span class="icon"><i class="fas fa-times-circle"></i></span>
            Çıkış Yap
        </a>
    </div>

    <div class="content">
        <div class="info-box">
            <div class="profile-icon">
                <i class="fas fa-user"></i> <!-- Font Awesome kullanıcı ikonu -->
            </div>

            <h2>Profilimi Güncelle</h2>
            <form asp-action="EditProfile" method="post">
                <div class="form-group">
                    <label asp-for="s_name">Adı</label>
                    <input asp-for="s_name" class="form-control" />
                    <span asp-validation-for="s_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="s_phoneNum">Telefon Numarası</label>
                    <input asp-for="s_phoneNum" class="form-control" />
                    <span asp-validation-for="s_phoneNum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="city">Şehir</label>
                    <input asp-for="city" class="form-control" />
                    <span asp-validation-for="city" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </form>
        </div>
    </div>
</body>
</html>
